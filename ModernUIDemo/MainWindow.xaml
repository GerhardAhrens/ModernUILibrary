<Window
    x:Class="ModernUIDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ModernUIDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:myControls="clr-namespace:ModernUIDemo.MyControls"
    Title="MainWindow"
    Width="970"
    MaxWidth="1200"
    Height="600"
    MaxHeight="650"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Border
                            x:Name="Border"
                            Margin="0,3,0,0"
                            Padding="25,5,25,5"
                            BorderBrush="Gainsboro"
                            BorderThickness="1,1,1,0"
                            CornerRadius="5,5,0,0">
                            <ContentPresenter x:Name="ContentSite" ContentSource="Header" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="White" />
                                <Setter TargetName="Border" Property="Background" Value="Black" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="Black" />
                                <Setter TargetName="Border" Property="Background" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ListBox
            Width="200"
            ItemsSource="{Binding Path=TabControlSource.Value}"
            SelectionChanged="ListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=ItemHeader}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsGroupItem}" Value="true">
                            <Setter Property="ListBoxItem.Foreground" Value="Black" />
                            <Setter Property="ListBoxItem.Background" Value="LightGray" />
                            <Setter Property="ListBoxItem.IsHitTestVisible" Value="False" />
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </DataTrigger>
                        
                        <DataTrigger Binding="{Binding Path=IsGroupItem}" Value="false">
                            <Setter Property="ListBoxItem.Foreground" Value="Black" />
                            <Setter Property="ListBoxItem.Background" Value="Transparent" />
                            <Setter Property="ListBoxItem.IsHitTestVisible" Value="True" />
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <ContentControl
            x:Name="ccContent"
            Grid.Row="0"
            Grid.Column="1"
            Background="Silver"
            Content="{Binding Path=ContentItem.Value, UpdateSourceTrigger=PropertyChanged}" />

    </Grid>
</Window>

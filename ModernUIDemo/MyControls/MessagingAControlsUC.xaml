    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:ctrlA="clr-namespace:ModernUIDemo.Messaging"
    xmlns:ctrlB="clr-namespace:ModernUIDemo.Messaging"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <ctrlA:ControlAView BorderBrush="Silver" BorderThickness="1" />
            <ctrlB:ControlBView

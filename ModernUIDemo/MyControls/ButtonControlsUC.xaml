                    Width="70"
                    Height="28"
                    Margin="2,0"
                    Content="dashed"
                    CornerRadius="3"
                    Type="dashed" />
                <ModernUI:FlatButton
                    Width="70"
                    Height="28"
                    Margin="2,0"
                    Content="text"
                    CornerRadius="3"
                    Type="text" />
                <ModernUI:FlatButton
                    Width="70"
                    Height="28"
                    Margin="2,0"
                    Content="info"
                    CornerRadius="3"
                    MouseOverBackground1="AliceBlue"
                    Type="info" />
                <ModernUI:FlatButton
                    Width="70"
                    Height="28"
                    Margin="2,0"
                    Content="error"
                    CornerRadius="3"
                    Type="error" />
                <ModernUI:FlatButton
                    Width="70"
                    Height="28"
                    Margin="2,0"
                    Content="success"
                    CornerRadius="3"
                    Type="success" />
                <ModernUI:FlatButton
                    Width="70"
                    Height="28"
                    Margin="2,0"
                    Content="warning"
                    CornerRadius="3"
                    Type="warning" />
                <ModernUI:FlatButton
                    Width="70"
                    Height="28"
                    Margin="2,0"
                    Content="Disabled"
                    CornerRadius="3"
                    IsEnabled="False"
                    Type="info" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <ModernUI:AnimationButton
                    Width="200"
                    Height="25"
                    Content="Klick"
                    IsChecked="True" />
            </StackPanel>

            <ModernUI:HeaderSeparator
                Height="15"
                Margin="0,0,0,10"
                Background="Green"

                <ModernUI:PathButton
                    Width="70"
                    Height="30"
                    Margin="10,10"
                    Content="Refresh"
                    PathWidth="12" />

                <ModernUI:PathButton
                    Width="95"
                    Height="30"
                    Margin="10,10"
                    Background="#DA4453"
                    Content="Refresh"
                    CornerRadius="3"
                    MouseOverBackground="#ED5565"
                    PathData="{StaticResource Refresh-Off}"
                    PathWidth="14"
                    PressedBackground="#DA4453" />
                <ModernUI:PathTextButton
                    Margin="10,10"
                    Background="#00DA4453"
                    Content="Refresh"
                    ContentMargin="0,10,0,0"
                    Orientation="Vertical"
                    PathData="{StaticResource Refresh-Off}"
                    PathWidth="14" />
                <ModernUI:PathIconButton
                    Width="40"
                    Height="40"
                    Margin="10,10"
                    Background="#DA4453"
                    CornerRadius="100"
                    MouseOverBackground="#ED5565"
                    NormalPathColor="White"
                    PathWidth="15"
                    PressedBackground="#DA4453" />

                <ModernUI:PathIconButton
                    Width="50"
                    Height="35"
                    Margin="10,10"
                    Background="#DA4453"
                    CornerRadius="5"
                    MouseOverBackground="#ED5565"
                    MouseOverPathColor="White"
                    NormalPathColor="White"
                    PathData="{DynamicResource Refresh-Off}"
                    PathWidth="15"
                    PressedBackground="#DA4453"
                    PressedPathColor="White" />
                <ModernUI:PathIconButton
                    Width="50"
                    Height="35"
                    Margin="10,10"
                    Background="Transparent"
                    CornerRadius="5"
                    MouseOverBackground="Transparent"
                    MouseOverPathColor="Black"
                    NormalPathColor="Black"
                    PathData="{DynamicResource Refresh-Off}"
                    PathWidth="15"
                    PressedBackground="Transparent"
                    PressedPathColor="Black" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <ModernUI:FlatButton
                    Width="95"
                    Height="30"
                    Margin="10,10"
                    Background="#DA4453"
                    Content="FlatButton"
                    CornerRadius="15"
                    Foreground="White"
                    MouseOverBackground="#ED5565"
                    MouseOverBackground1="#ED5565"
                    PressedBackground="#DA4453" />

                <ModernUI:FlatButton
                    Width="115"
                    Height="30"
                    Margin="10,10"
                    Content="FlatButton, Type=No"
                    CornerRadius="2"
                    Type="No" />

                <ModernUI:FlatButton
                    Width="95"
                    Height="32"
                    Margin="10,10"
                    Click="FlatButton_Click_1"
                    Content="FlatButton"
                    CornerRadius="3"
                    Foreground="White">
                    <ModernUI:FlatButton.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Offset="0" Color="#faa51a" />
                            <GradientStop Offset="1" Color="#f47a20" />
                        </LinearGradientBrush>
                    </ModernUI:FlatButton.Background>
                    <ModernUI:FlatButton.MouseOverBackground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Offset="0" Color="#f88e11" />
                            <GradientStop Offset="1" Color="#f06015" />
                        </LinearGradientBrush>
                    </ModernUI:FlatButton.MouseOverBackground>
                    <ModernUI:FlatButton.PressedBackground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Offset="0" Color="#f47a20" />
                            <GradientStop Offset="1" Color="#faa51a" />
                        </LinearGradientBrush>
                    </ModernUI:FlatButton.PressedBackground>
                </ModernUI:FlatButton>

                <ModernUI:FlatButton
                    Width="95"
                    Height="32"
                    Margin="10,10"
                    Click="FlatButton_Click"
                    Content="FlatButton, Click"
                    CornerRadius="3"
                    Foreground="White">
                    <ModernUI:FlatButton.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Offset="0" Color="#ed1c24" />
                            <GradientStop Offset="1" Color="#aa1317" />
                        </LinearGradientBrush>
                    </ModernUI:FlatButton.Background>
                    <ModernUI:FlatButton.MouseOverBackground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Offset="0" Color="#c9151b" />
                            <GradientStop Offset="1" Color="#a11115" />
                        </LinearGradientBrush>
                    </ModernUI:FlatButton.MouseOverBackground>
                    <ModernUI:FlatButton.PressedBackground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Offset="0" Color="#aa1317" />
                            <GradientStop Offset="1" Color="#ed1c24" />
                        </LinearGradientBrush>
                    </ModernUI:FlatButton.PressedBackground>
                </ModernUI:FlatButton>
            </StackPanel>


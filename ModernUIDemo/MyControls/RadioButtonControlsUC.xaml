<UserControl
    x:Class="ModernUIDemo.MyControls.RadioButtonControlsUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:WPFConverter="clr-namespace:ModernIU.Converters;assembly=ModernUILibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="500"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <PathGeometry x:Key="Refresh-Off" Figures="M20,4L14,4 14,10 16.24,7.76C17.32,8.85 18,10.34 18,12 18,13 17.75,13.94 17.32,14.77L18.78,16.23C19.55,15 20,13.56 20,12 20,9.79 19.09,7.8 17.64,6.36L20,4 M2.86,5.41L5.22,7.77C4.45,9 4,10.44 4,12 4,14.21 4.91,16.2 6.36,17.64L4,20 10,20 10,14 7.76,16.24C6.68,15.15 6,13.66 6,12 6,11 6.25,10.06 6.68,9.23L14.76,17.31C14.5,17.44,14.26,17.56,14,17.65L14,19.74C14.79,19.53,15.54,19.2,16.22,18.78L18.58,21.14 19.85,19.87 4.14,4.14 2.86,5.41 M10,6.35L10,4.26C9.2,4.47,8.45,4.8,7.77,5.22L9.23,6.68C9.5,6.56,9.73,6.44,10,6.35z" />
        <PathGeometry x:Key="PlusLabel" Figures="M20 14H14V20H10V14H4V10H10V4H14V10H20V14Z" />
        <PathGeometry x:Key="IconAnimation" Figures="M21,10.12H14.22L16.96,7.3C14.23,4.6 9.81,4.5 7.08,7.2C4.35,9.91 4.35,14.28 7.08,17C9.81,19.7 14.23,19.7 16.96,17C18.32,15.65 19,14.08 19,12.1H21C21,14.08 20.12,16.65 18.36,18.39C14.85,21.87 9.15,21.87 5.64,18.39C2.14,14.92 2.11,9.28 5.62,5.81C9.13,2.34 14.76,2.34 18.27,5.81L21,3V10.12M12.5,8V12.25L16,14.33L15.28,15.54L11,13V8H12.5Z" />
        <WPFConverter:BooleanToTextConverter x:Key="BooleanToTextConverter" />

        <Style TargetType="{x:Type ModernUI:ColorRadioButton}">
            <Setter Property="Margin" Value="8" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="BorderBrush" Value="#3C4C5E" />
            <Setter Property="CheckedBrush" Value="#8ab4f8" />
            <Setter Property="BulletSize" Value="18" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.ColumnSpan="2"
            FontSize="14"
            Text="Beispiel für RadioButton; ColorRadioButton" />
        <Separator
            Grid.ColumnSpan="2"
            Height="3"
            Background="Green" />

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Vertical">
            <ModernUI:MRadionButton
                x:Name="rbEins"
                Margin="0,5"
                Content="Eins"
                GroupName="A" />

            <ModernUI:MRadionButton
                x:Name="rbZwei"
                Margin="0,5"
                Content="Zwei"
                GroupName="A" />

            <ModernUI:MRadionButton
                x:Name="rbDrei"
                Margin="0,5"
                Content="Drei"
                GroupName="A"
                IsChecked="True"
                IsEnabled="False" />
        </StackPanel>

        <TextBlock Grid.Row="1" Grid.Column="1">
            <Run FontWeight="Bold" Text="Ergebnis:" />
            <LineBreak />
            <Run FontWeight="Bold" Text="RadioButton Eins:" />
            <Run Text="{Binding Path=IsChecked, ElementName=rbEins}" />
            <LineBreak />
            <Run FontWeight="Bold" Text="RadioButton Zwei:" />
            <Run Text="{Binding Path=IsChecked, ElementName=rbZwei}" />
            <LineBreak />
            <Run FontWeight="Bold" Text="RadioButton Drei:" />
            <Run Text="{Binding Path=IsChecked, ElementName=rbDrei}" />
        </TextBlock>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            <StackPanel
                Margin="0,2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Margin="20,0"
                    VerticalAlignment="Center"
                    Text="A" />
                <ModernUI:FlatToggleButton
                    x:Name="tgA"
                    Width="43"
                    Height="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel
                Margin="0,2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Margin="20,0"
                    VerticalAlignment="Center"
                    Text="B" />
                <ModernUI:FlatToggleButton
                    x:Name="tgB"
                    Width="43"
                    Height="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsChecked="True" />
            </StackPanel>

            <StackPanel
                Margin="0,2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Margin="20,0"
                    VerticalAlignment="Center"
                    Text="C" />

                <ModernUI:FlatToggleButton
                    x:Name="tgC"
                    Width="43"
                    Height="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsChecked="False" />
            </StackPanel>
        </StackPanel>

        <TextBlock Grid.Row="2" Grid.Column="1">
            <Run FontWeight="Bold" Text="Ergebnis:" />
            <LineBreak />
            <Run FontWeight="Bold" Text="FlatToggleButton A:" />
            <Run Text="{Binding Path=IsChecked, ElementName=tgA}" />
            <LineBreak />
            <Run FontWeight="Bold" Text="FlatToggleButton B:" />
            <Run Text="{Binding Path=IsChecked, ElementName=tgB}" />
            <LineBreak />
            <Run FontWeight="Bold" Text="FlatToggleButton C:" />
            <Run Text="{Binding Path=IsChecked, ElementName=tgC}" />
        </TextBlock>

        <StackPanel
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="0,2"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <Viewbox Margin="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <ModernUI:ColorRadioButton
                            BulletCircleBrush="Yellow"
                            CheckedBrush="Green"
                            Content="Hey, Gerhard!"
                            GroupName="DemoGroup"
                            IsChecked="True" />

                        <ModernUI:ColorRadioButton
                            BulletCircleBrush="Red"
                            CheckedBrush="#f28b82"
                            Content="Hier nicht auswählen!"
                            GroupName="DemoGroup" />

                        <ModernUI:ColorRadioButton
                            BulletCircleBrush="Blue"
                            CheckedBrush="#b782f2"
                            Content="Hallo Charlie!"
                            GroupName="DemoGroup" />
                    </StackPanel>
                </Grid>
            </Viewbox>
        </StackPanel>

        <ModernUI:HeaderSeparator
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Height="15"
            VerticalAlignment="Top"
            Background="Green"
            Header="ToggleButton mit Icon" />

        <StackPanel
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Height="60"
            Margin="0,20,0,0"
            Orientation="Horizontal">
            <ModernUI:AnimationButton
                Width="100"
                Height="30"
                AnimationIcon="{StaticResource ResourceKey=IconAnimation}"
                IsChecked="{Binding Path=IsRBAnimiert, UpdateSourceTrigger=PropertyChanged}" />

            <Label Width="10" />

            <ModernUI:IconToggleButton
                Width="100"
                Height="30"
                VerticalAlignment="Center"
                CheckedContent="Aktiv"
                Content="InAktive"
                CornerRadius="0"
                FontSize="14"
                Orientation="Horizontal" />

            <ModernUI:IconToggleButton
                Width="80"
                Height="50"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                CheckedContent="Aktiv"
                Content="InAktive"
                CornerRadius="0"
                FontSize="14"
                Orientation="Vertical" />

            <ModernUI:IconToggleButton
                Width="150"
                Height="30"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                CheckedContent="Label erstellen"
                CheckedIcon="{StaticResource ResourceKey=Refresh-Off}"
                Content="Label erstellen"
                FontSize="14"
                FontWeight="Medium"
                Orientation="Horizontal"
                UncheckedIcon="{StaticResource ResourceKey=Refresh-Off}" />

            <ModernUI:IconToggleButton
                x:Name="itgLabelErstellen"
                Width="150"
                Height="30"
                Margin="20,0,0,0"
                BorderBrush="Transparent"
                BorderThickness="0"
                CheckedContent="Label erstellen"
                CheckedIcon="{StaticResource ResourceKey=PlusLabel}"
                Content="Label erstellen"
                ContentMargin="20,0,0,0"
                IsChecked="{Binding Path=IsErstelleLabel, UpdateSourceTrigger=PropertyChanged}"
                Orientation="Horizontal"
                UncheckedIcon="{StaticResource ResourceKey=PlusLabel}" />

        </StackPanel>

        <StackPanel
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Height="60"
            Margin="0,0,0,0"
            Orientation="Horizontal">

            <TextBlock
                Width="200"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Medium"
                Language="de">
                <Run Text="RadioButton animiert" />
                <Run Text=":" />
                <Run Text="{Binding Path=IsRBAnimiert, FallbackValue=false, Converter={StaticResource ResourceKey=BooleanToTextConverter}}" />
            </TextBlock>

            <TextBlock
                Width="200"
                Margin="320,0,0,0"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Medium"
                Language="de">
                <Run Text="Erstelle ein Label" />
                <Run Text=":" />
                <Run Text="{Binding Path=IsErstelleLabel, FallbackValue=false, Converter={StaticResource ResourceKey=BooleanToTextConverter}}" />
            </TextBlock>
        </StackPanel>

    </Grid>
</UserControl>

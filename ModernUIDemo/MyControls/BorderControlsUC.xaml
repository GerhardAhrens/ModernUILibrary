<UserControl
    x:Class="ModernUIDemo.MyControls.BorderControlsUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock FontSize="14" Text="Beispiel für verschiedene Bordertypen" />
        <Separator Height="3" Background="Green" />

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Orientation="Vertical">

            <ModernUI:BlinkingBorder
                Width="100"
                Height="40"
                BorderBrush="Red"
                BorderThickness="5"
                IsBlinking="True" />

            <ModernUI:DotBorder
                Width="100"
                Height="40"
                Margin="0,10,0,0"
                BorderBrush="Green"
                BorderStrokeThickness="5"
                Speed="1000"
                StrokeDashArray="2"
                StrokeThickness="3" />

            <ModernUI:DotBorder
                Width="200"
                Height="80"
                Margin="0,10,0,0"
                Background="Yellow"
                BorderBrush="Green"
                BorderStrokeThickness="5"
                CornerRadius="5,15,5,15"
                Speed="1000"
                StrokeDashArray="5"
                StrokeThickness="3">
                <TextBlock
                    Margin="6,2,6,2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="DotBorder" />
            </ModernUI:DotBorder>
        </StackPanel>

    </Grid>
</UserControl>

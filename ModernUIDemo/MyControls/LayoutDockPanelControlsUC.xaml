<UserControl
    x:Class="ModernUIDemo.MyControls.LayoutDockPanelControlsUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="900"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Padding" Value="9,0" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Name="Root">
            <Button Content="0" />
            <Button
                Background="Red"
                Content="1-Bottom"
                DockPanel.Dock="Bottom" />
            <Button
                Background="Orange"
                Content="2-Left"
                DockPanel.Dock="Left" />
            <Button
                Background="Yellow"
                Content="3-Right"
                DockPanel.Dock="Right" />
            <Button
                Background="Green"
                Content="4-Top"
                DockPanel.Dock="Top" />
            <Button Background="Blue" Content="5" />
            <Button Background="Indigo" Content="6" />
            <Button Background="Violet">
                <CheckBox
                    Name="LastElement"
                    Content="Fill with Last Element"
                    IsChecked="{Binding Path=LastChildFill, ElementName=Root}" />
            </Button>
        </DockPanel>

    </Grid>
</UserControl>

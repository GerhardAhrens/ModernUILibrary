<UserControl
    x:Class="ModernUIDemo.MyControls.TabViewControlsUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock FontSize="14" Text="Beispiel für TabView" />
        <Separator Height="3" Background="Green" />

        <StackPanel Grid.Row="1">
            <ModernUI:TabView
                x:Name="CustomTabView"
                MinHeight="350"
                VerticalAlignment="Center">
                <ModernUI:TabView.TabViewItems>
                    <TabItem Header="111">
                        <TextBlock Text="TabItem - 111" />
                    </TabItem>
                    <TabItem Header="123">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <WrapPanel Orientation="Horizontal">
                                <Button Width="100" Content="Button" />
                                <Button Width="100" Content="Button" />
                                <Button Width="100" Content="Button" />
                                <Button Width="100" Content="Button" />
                                <Button Width="100" Content="Button" />
                                <Button Width="100" Content="Button" />
                                <Button Width="100" Content="Button" />
                            </WrapPanel>
                            <WrapPanel Grid.Row="1" Orientation="Vertical">
                                <Button Width="100" Content="Button" />
                                <Button Width="100" Content="Button" />
                                <Button Width="100" Content="Button" />
                                <Button Width="100" Content="Button" />
                                <Button Width="100" Content="Button" />
                                <Button Width="100" Content="Button" />
                            </WrapPanel>
                        </Grid>
                    </TabItem>
                </ModernUI:TabView.TabViewItems>
            </ModernUI:TabView>

            <Button
                Name="AddTab"
                Grid.Row="1"
                Margin="5"
                Content="Neuer Tab vom Button" />
        </StackPanel>

    </Grid>
</UserControl>

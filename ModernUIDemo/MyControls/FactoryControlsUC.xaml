<UserControl
    x:Class="ModernUIDemo.MyControls.FactoryControlsUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock FontSize="14" Text="Beispiel für Execute Method über Attribute..." />
        <Separator Height="3" Background="Green" />

        <UniformGrid Grid.Row="1" Grid.Column="0">
            <ModernUI:FlatButton
                x:Name="EM_A"
                Height="30"
                Margin="5"
                Content="Execute Method with Void" />

            <ModernUI:FlatButton
                x:Name="EM_B"
                Height="30"
                Margin="5"
                Content="Execute Method 1 with Return String" />

            <ModernUI:FlatButton
                x:Name="EM_C"
                Height="30"
                Margin="5"
                Content="Execute Method 2 with Return String" />

            <ModernUI:FlatButton
                x:Name="EM_D"
                Height="30"
                Margin="5"
                Content="Execute Method 3 with Return String" />

            <ModernUI:FlatButton
                x:Name="EM_E"
                Height="30"
                Margin="5"
                Content="Execute Method 4 (Params) with Return String" />
        </UniformGrid>

    </Grid>
</UserControl>

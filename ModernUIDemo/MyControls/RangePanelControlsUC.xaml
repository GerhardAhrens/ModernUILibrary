<UserControl
    x:Class="ModernUIDemo.MyControls.RangePanelControlsUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="450"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock FontSize="14" Text="Beispiel für RangePanel" />
        <Separator Height="3" Background="Green" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            TextWrapping="Wrap">
            <Run Text="positioniert auf 50%, feste Höhe Ausrichten" />
            <LineBreak />
            <Run Text="     Anfang      Mitte         Ende" />
        </TextBlock>
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ModernUI:RangePanel
                Grid.Column="0"
                Width="17"
                Background="LightGray"
                Maximum="100"
                Minimum="0">
                <Rectangle
                    Height="50"
                    ModernUI:RangePanel.Alignment="Begin"
                    ModernUI:RangePanel.Position="50"
                    Fill="Blue" />
            </ModernUI:RangePanel>

            <ModernUI:RangePanel
                Grid.Column="1"
                Width="17"
                Background="LightGray"
                Maximum="100"
                Minimum="0">
                <Rectangle
                    Height="50"
                    ModernUI:RangePanel.Alignment="Center"
                    ModernUI:RangePanel.Position="50"
                    Fill="Blue" />
            </ModernUI:RangePanel>

            <ModernUI:RangePanel
                Grid.Column="2"
                Width="17"
                Background="LightGray"
                Maximum="100"
                Minimum="0">
                <Rectangle
                    Height="50"
                    ModernUI:RangePanel.Alignment="End"
                    ModernUI:RangePanel.Position="50"
                    Fill="Blue" />
            </ModernUI:RangePanel>
        </Grid>

        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            TextWrapping="Wrap">
            <Run Text="positioniert auf 25% fester Breite 5px" />
            <LineBreak />
            <Run Text="   horizontal           alignment" />
        </TextBlock>
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ModernUI:RangePanel
                Grid.Column="0"
                Width="17"
                Background="LightGray"
                Maximum="100"
                Minimum="0">
                <Rectangle
                    Width="5"
                    Height="50"
                    HorizontalAlignment="Left"
                    ModernUI:RangePanel.Alignment="Begin"
                    ModernUI:RangePanel.Position="25"
                    Fill="Green" />
            </ModernUI:RangePanel>

            <ModernUI:RangePanel
                Grid.Column="1"
                Width="17"
                Background="LightGray"
                Maximum="100"
                Minimum="0">
                <Rectangle
                    Width="5"
                    Height="50"
                    HorizontalAlignment="Center"
                    ModernUI:RangePanel.Alignment="Center"
                    ModernUI:RangePanel.Position="25"
                    Fill="Green" />
            </ModernUI:RangePanel>

            <ModernUI:RangePanel
                Grid.Column="2"
                Width="17"
                Background="LightGray"
                Maximum="100"
                Minimum="0">
                <Rectangle
                    Width="5"
                    Height="50"
                    HorizontalAlignment="Right"
                    ModernUI:RangePanel.Alignment="End"
                    ModernUI:RangePanel.Position="25"
                    Fill="Green" />
            </ModernUI:RangePanel>
        </Grid>

        <TextBlock
            Grid.Row="1"
            Grid.Column="2"
            TextWrapping="Wrap">
            <Run Text="75% feste Breite 5px" />
            <LineBreak />
            <Run Text="horizontal   alignment,   margin 3" />
        </TextBlock>
        <Grid
            Grid.Row="1"
            Grid.Column="2"
            Margin="0,50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ModernUI:RangePanel
                Grid.Column="0"
                Width="17"
                Background="LightGray"
                Maximum="100"
                Minimum="0">
                <Rectangle
                    Width="5"
                    Height="50"
                    Margin="3"
                    HorizontalAlignment="Left"
                    ModernUI:RangePanel.Alignment="Begin"
                    ModernUI:RangePanel.Position="75"
                    Fill="Maroon" />
            </ModernUI:RangePanel>
            <ModernUI:RangePanel
                Grid.Column="1"
                Width="17"
                Background="LightGray"
                Maximum="100"
                Minimum="0">
                <Rectangle
                    Width="5"
                    Height="50"
                    Margin="3"
                    HorizontalAlignment="Center"
                    ModernUI:RangePanel.Alignment="Center"
                    ModernUI:RangePanel.Position="75"
                    Fill="Maroon" />
            </ModernUI:RangePanel>
            <ModernUI:RangePanel
                Grid.Column="2"
                Width="17"
                Background="LightGray"
                Maximum="100"
                Minimum="0">
                <Rectangle
                    Width="5"
                    Height="50"
                    Margin="3"
                    HorizontalAlignment="Right"
                    ModernUI:RangePanel.Alignment="End"
                    ModernUI:RangePanel.Position="75"
                    Fill="Maroon" />
            </ModernUI:RangePanel>
        </Grid>

        <TextBlock
            Grid.Row="1"
            Grid.Column="3"
            TextWrapping="Wrap">
            50%, 8px width, horizontal alignment, margin 2<LineBreak />
            10% 25% 66% range</TextBlock>
        <Grid
            Grid.Row="1"
            Grid.Column="3"
            Margin="0,50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>
            <ModernUI:RangePanel
                Grid.Column="0"
                Width="17"
                Background="LightGray"
                Maximum="100"
                Minimum="0">
                <Rectangle
                    Width="10"
                    Margin="4"
                    HorizontalAlignment="Left"
                    ModernUI:RangePanel.Alignment="Begin"
                    ModernUI:RangePanel.Position="50"
                    ModernUI:RangePanel.Range="10"
                    Fill="Yellow" />
            </ModernUI:RangePanel>
            <ModernUI:RangePanel
                Grid.Column="1"
                Width="17"
                Background="LightGray"
                Maximum="100"
                Minimum="0">
                <Rectangle
                    Width="5"
                    Margin="0"
                    HorizontalAlignment="Center"
                    ModernUI:RangePanel.Alignment="Center"
                    ModernUI:RangePanel.Position="50"
                    ModernUI:RangePanel.Range="25"
                    Fill="Green" />
                <Rectangle
                    Width="10"
                    Margin="4"
                    HorizontalAlignment="Center"
                    ModernUI:RangePanel.Alignment="Center"
                    ModernUI:RangePanel.Position="50"
                    ModernUI:RangePanel.Range="25"
                    Fill="Yellow" />
            </ModernUI:RangePanel>
            <ModernUI:RangePanel
                Grid.Column="2"
                Width="17"
                Background="LightGray"
                Maximum="100"
                Minimum="0">
                <Rectangle
                    Width="10"
                    Margin="4"
                    HorizontalAlignment="Right"
                    ModernUI:RangePanel.Alignment="End"
                    ModernUI:RangePanel.Position="50"
                    ModernUI:RangePanel.Range="60"
                    Fill="Yellow" />
            </ModernUI:RangePanel>
        </Grid>

        <TextBlock
            Grid.Row="1"
            Grid.Column="4"
            TextWrapping="Wrap">
            databinding<LineBreak />
            RangeItemsControl<LineBreak />
            RangeScrollbar</TextBlock>
        <Grid
            Grid.Row="1"
            Grid.Column="4"
            Margin="0,50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ModernUI:RangeItemsControl
                Grid.Column="0"
                Width="17"
                Background="LightGray"
                Maximum="100"
                Minimum="0">
                <Rectangle
                    Width="5"
                    Height="50"
                    HorizontalAlignment="Right"
                    ModernUI:RangePanel.Alignment="End"
                    ModernUI:RangePanel.Position="25"
                    Fill="Green" />
                <Rectangle
                    Width="10"
                    Margin="4"
                    HorizontalAlignment="Left"
                    ModernUI:RangePanel.Alignment="Begin"
                    ModernUI:RangePanel.Position="50"
                    ModernUI:RangePanel.Range="10"
                    Fill="Yellow" />
                <CheckBox ModernUI:RangePanel.Position="33" IsChecked="True" />
            </ModernUI:RangeItemsControl>

            <ModernUI:RangeItemsControl
                Grid.Row="1"
                Grid.Column="1"
                Width="17"
                AlternationCount="2"
                Background="LightGray"
                Maximum="100"
                Minimum="0">
                <ModernUI:RangeItemsControl.ItemsSource>
                    <x:Array Type="{x:Type system:Double}">
                        <system:Double>10</system:Double>
                        <system:Double>25</system:Double>
                        <system:Double>35</system:Double>
                        <system:Double>50</system:Double>
                        <system:Double>60</system:Double>
                        <system:Double>75</system:Double>
                    </x:Array>
                </ModernUI:RangeItemsControl.ItemsSource>
                <ModernUI:RangeItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type system:Double}">
                        <Ellipse
                            Name="elp"
                            Width="8"
                            Height="8"
                            ModernUI:RangePanel.Alignment="Center"
                            ModernUI:RangePanel.Position="{Binding}"
                            Fill="DarkRed" />
                        <DataTemplate.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                <Setter TargetName="elp" Property="Fill" Value="DarkSalmon" />
                            </Trigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ModernUI:RangeItemsControl.ItemTemplate>
            </ModernUI:RangeItemsControl>

            <ModernUI:RangeScrollbar
                x:Name="rscrollbar"
                Grid.Column="2"
                Maximum="100"
                Minimum="0"
                SmallChange="1">
                <Rectangle
                    Height="2"
                    HorizontalAlignment="Stretch"
                    ModernUI:RangePanel.Position="{Binding Value, ElementName=rscrollbar}"
                    Fill="Red" />
                <Rectangle
                    Height="2"
                    HorizontalAlignment="Stretch"
                    ModernUI:RangePanel.Position="82"
                    Fill="DarkSlateGray" />
                <Rectangle
                    Width="4"
                    HorizontalAlignment="Left"
                    ModernUI:RangePanel.Alignment="Begin"
                    ModernUI:RangePanel.Position="17"
                    ModernUI:RangePanel.Range="56"
                    Fill="YellowGreen" />
                <Rectangle
                    Width="5"
                    Height="5"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    ModernUI:RangePanel.Alignment="Begin"
                    ModernUI:RangePanel.Position="50"
                    Fill="SkyBlue" />
                <Rectangle
                    Width="5"
                    Height="5"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Right"
                    ModernUI:RangePanel.Alignment="Begin"
                    ModernUI:RangePanel.Position="92"
                    Fill="Maroon" />
            </ModernUI:RangeScrollbar>
        </Grid>

        <Grid
            Grid.Row="1"
            Grid.ColumnSpan="5"
            Margin="0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="1" />
                <RowDefinition Height="*" />
                <RowDefinition Height="1" />
                <RowDefinition Height="*" />
                <RowDefinition Height="1" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Rectangle
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Fill="Black" />
            <Rectangle
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Fill="Black" />
            <Rectangle
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Fill="Black" />
        </Grid>

        <ModernUI:RangeItemsControl
            Grid.Row="2"
            Grid.ColumnSpan="5"
            Height="17"
            AlternationCount="2"
            Background="LightGray"
            Maximum="100"
            Minimum="0"
            Orientation="Horizontal">
            <ModernUI:RangeItemsControl.ItemsSource>
                <x:Array Type="{x:Type system:Double}">
                    <system:Double>10</system:Double>
                    <system:Double>25</system:Double>
                    <system:Double>35</system:Double>
                    <system:Double>50</system:Double>
                    <system:Double>60</system:Double>
                    <system:Double>75</system:Double>
                </x:Array>
            </ModernUI:RangeItemsControl.ItemsSource>
            <ModernUI:RangeItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type system:Double}">
                    <Ellipse
                        Name="elp"
                        Width="8"
                        Height="8"
                        ModernUI:RangePanel.Alignment="Center"
                        ModernUI:RangePanel.Position="{Binding}"
                        Fill="DarkRed" />
                    <DataTemplate.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                            <Setter TargetName="elp" Property="Fill" Value="DarkSalmon" />
                        </Trigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ModernUI:RangeItemsControl.ItemTemplate>
        </ModernUI:RangeItemsControl>

        <ModernUI:RangeScrollbar
            Grid.Row="3"
            Grid.ColumnSpan="5"
            AlternationCount="2"
            Maximum="100"
            Minimum="0"
            Orientation="Horizontal">
            <ModernUI:RangeScrollbar.ItemsSource>
                <x:Array Type="{x:Type system:Double}">
                    <system:Double>10</system:Double>
                    <system:Double>25</system:Double>
                    <system:Double>35</system:Double>
                    <system:Double>50</system:Double>
                    <system:Double>60</system:Double>
                    <system:Double>75</system:Double>
                    <system:Double>88</system:Double>
                </x:Array>
            </ModernUI:RangeScrollbar.ItemsSource>
            <ModernUI:RangeScrollbar.ItemTemplate>
                <DataTemplate DataType="{x:Type system:Double}">
                    <Rectangle
                        Name="rect"
                        Width="2"
                        ModernUI:RangePanel.Alignment="Center"
                        ModernUI:RangePanel.Position="{Binding}"
                        Fill="DarkCyan" />
                </DataTemplate>
            </ModernUI:RangeScrollbar.ItemTemplate>
        </ModernUI:RangeScrollbar>
    </Grid>
</UserControl>

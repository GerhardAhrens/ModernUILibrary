<UserControl
    x:Class="ModernUIDemo.MyControls.ColorControlsUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <SolidColorBrush x:Key="Dialog.Primary.Normal">#3399ff</SolidColorBrush>
        <SolidColorBrush x:Key="Dialog.Primary.Light">#5CADFF</SolidColorBrush>
        <SolidColorBrush x:Key="Dialog.Primary.Dark">#3091f2</SolidColorBrush>
        <SolidColorBrush x:Key="Message.Info">#3399ff</SolidColorBrush>
        <SolidColorBrush x:Key="Message.Success">#00CC66</SolidColorBrush>
        <SolidColorBrush x:Key="Message.Warning">#FF9900</SolidColorBrush>
        <SolidColorBrush x:Key="Message.Error">#FF6600</SolidColorBrush>
    </UserControl.Resources>

    <ModernUI:MScrollViewer Padding="0,0,20,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.ColumnSpan="2"
                FontSize="14"
                Text="Farbdarstellung" />

            <Separator
                Grid.ColumnSpan="2"
                Height="3"
                Background="Green" />

            <StackPanel
                Grid.Row="1"
                Grid.ColumnSpan="2"
                VerticalAlignment="Center">

                <ModernUI:HeaderSeparator
                    Height="15"
                    Background="Green"
                    Header="Basis Farbdarstellung" />

                <TextBlock
                    Margin="0,5,0,0"
                    FontSize="16"
                    Foreground="#657180"
                    Text="Primärfarbe" />

                <UniformGrid Columns="3">
                    <Border
                        Height="80"
                        Margin="0,0,0,0"
                        Background="{StaticResource ResourceKey=Dialog.Primary.Normal}"
                        CornerRadius="5"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                Foreground="#FFF"
                                Text="Primary" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#BFDFFF"
                                Text="#3399ff" />
                        </StackPanel>
                    </Border>
                    <Border
                        Height="80"
                        Margin="15,0,0,0"
                        Background="{StaticResource ResourceKey=Dialog.Primary.Light}"
                        CornerRadius="5"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                Foreground="#FFF"
                                Text="Light Primary" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#BFDFFF"
                                Text="#5cadff" />
                        </StackPanel>
                    </Border>
                    <Border
                        Height="80"
                        Margin="15,0,0,0"
                        Background="{StaticResource ResourceKey=Dialog.Primary.Dark}"
                        CornerRadius="5"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                Foreground="#FFF"
                                Text="Dark Primary" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#BFDFFF"
                                Text="#3091f2" />
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <Label Height="20" />

                <ModernUI:HeaderSeparator
                    Height="15"
                    Background="Green"
                    Header="Sekundärfarben sind repräsentative Farben, die häufig für Informationsmeldungen wie Erfolg, Warnung und Misserfolg verwendet werden." />

                <TextBlock
                    FontSize="16"
                    Foreground="#657180"
                    Text="Sekundärfarbe" />

                <UniformGrid Columns="4">
                    <Border
                        Height="80"
                        Margin="0,0,0,0"
                        Background="{StaticResource ResourceKey=Message.Info}"
                        CornerRadius="5"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                Foreground="#FFF"
                                Text="Info" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#BFDFFF"
                                Text="#3399ff" />
                        </StackPanel>
                    </Border>
                    <Border
                        Height="80"
                        Margin="15,0,0,0"
                        Background="{StaticResource ResourceKey=Message.Success}"
                        CornerRadius="5"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                Foreground="#FFF"
                                Text="Success" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#BFDFFF"
                                Text="#00CC66" />
                        </StackPanel>
                    </Border>
                    <Border
                        Height="80"
                        Margin="15,0,0,0"
                        Background="{StaticResource ResourceKey=Message.Warning}"
                        CornerRadius="5"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                Foreground="#FFF"
                                Text="Warning" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#BFDFFF"
                                Text="#FF9900" />
                        </StackPanel>
                    </Border>

                    <Border
                        Height="80"
                        Margin="15,0,0,0"
                        Background="{StaticResource ResourceKey=Message.Error}"
                        CornerRadius="5"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                Foreground="#FFF"
                                Text="Error" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#BFDFFF"
                                Text="#FF6600" />
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <Label Height="20" />

                <ModernUI:HeaderSeparator
                    Height="15"
                    Background="Green"
                    Header="Neutrale Farben werden häufig für Text, Hintergründe, Rahmen, Schatten usw. verwendet und können die hierarchische Struktur widerspiegeln." />

                <TextBlock
                    FontSize="16"
                    Foreground="#657180"
                    Text="Neutrale Farben" />

                <UniformGrid Columns="4" Rows="2">
                    <Border
                        Height="80"
                        Margin="0,0,0,0"
                        Background="#464c5b"
                        CornerRadius="5"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                Foreground="#FFF"
                                Text="Bildunterschrift Title" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#BFDFFF"
                                Text="#464c5b" />
                        </StackPanel>
                    </Border>
                    <Border
                        Height="80"
                        Margin="15,0,0,0"
                        Background="#657180"
                        CornerRadius="5"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                Foreground="#FFF"
                                Text="Haupttext Content" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#BFDFFF"
                                Text="#657180" />
                        </StackPanel>
                    </Border>
                    <Border
                        Height="80"
                        Margin="15,0,0,0"
                        Background="#9ea7b4"
                        CornerRadius="5"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                Foreground="#FFF"
                                Text="Symbol Sub Color" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#BFDFFF"
                                Text="#9ea7b4" />
                        </StackPanel>
                    </Border>
                    <Border
                        Height="80"
                        Margin="15,0,0,0"
                        Background="#c3cbd6"
                        CornerRadius="5"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                Foreground="#FFF"
                                Text="Control Disabled" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#EDEFF3"
                                Text="#c3cbd6" />
                        </StackPanel>
                    </Border>

                    <Border
                        Height="80"
                        Margin="0,10,0,0"
                        Background="#d7dde4"
                        CornerRadius="5"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                Foreground="#657180"
                                Text="Border" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#88929F"
                                Text="#d7dde4" />
                        </StackPanel>
                    </Border>
                    <Border
                        Height="80"
                        Margin="15,10,0,0"
                        Background="#e3e8ee"
                        CornerRadius="5"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                Foreground="#657180"
                                Text="Divider" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#929BA5"
                                Text="#e3e8ee" />
                        </StackPanel>
                    </Border>
                    <Border
                        Height="80"
                        Margin="15,10,0,0"
                        Background="#f5f7f9"
                        CornerRadius="5"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                Foreground="#657180"
                                Text="Background" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#929BA5"
                                Text="#f5f7f9" />
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </StackPanel>
        </Grid>
    </ModernUI:MScrollViewer>
</UserControl>

    <SolidColorBrush x:Key="Button_Default_Fill" Color="#5E5E5E" />
    <SolidColorBrush x:Key="Window_Title_Background" Color="#21A7ED" />
    <SolidColorBrush x:Key="Window_Button_Over_Background" Color="#A021A7ED" />


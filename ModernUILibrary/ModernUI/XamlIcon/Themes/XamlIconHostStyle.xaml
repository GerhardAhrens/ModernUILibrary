<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:MUI="clr-namespace:ModernIU.Controls">

    <Style TargetType="{x:Type MUI:XamlIconHost}">
        <Setter Property="DisabledForeground" Value="#C0C0C0" />
        <Setter Property="DisabledHighlight" Value="#808080" />
        <!--  "almost black" give a better visual  -->
        <Setter Property="StandardForeground" Value="#202020" />
        <Setter Property="StandardHighlight" Value="DarkOrange" />
    </Style>

</ResourceDictionary>
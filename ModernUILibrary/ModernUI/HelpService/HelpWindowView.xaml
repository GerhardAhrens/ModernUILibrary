<Window
    x:Class="ModernIU.Controls.HelpWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:MUI="clr-namespace:ModernIU.Controls"
    xmlns:UIbase="clr-namespace:ModernIU.WPF.Base"
    x:Name="nameHelpWindow"
    Title="AboutThisWindow"
    Width="500"
    Height="600"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <WindowChrome.WindowChrome>
        <WindowChrome />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <PathGeometry
            x:Key="DefaultIcon"
            Figures="M13.46,12L19,17.54V19H17.54L12,13.46L6.46,19H5V17.54L10.54,12L5,6.46V5H6.46L12,10.54L17.54,5H19V6.46L13.46,12Z"
            FillRule="NonZero" />

        <UIbase:CommandKeyReference x:Key="WindowCloseCmdKey" Command="{Binding Path=CancelButtonCommand}" />
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding
            Key="F4"
            Command="{StaticResource ResourceKey=WindowCloseCmdKey}"
            Modifiers="Ctrl" />

        <KeyBinding Key="Esc" Command="{StaticResource ResourceKey=WindowCloseCmdKey}" />
    </Window.InputBindings>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="48" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Grid.Column="0"
            Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"
            BorderBrush="#FFC9C9C9"
            BorderThickness="0,1,0,1">
            <TextBlock
                x:Name="txtHeaderText"
                Grid.Row="0"
                Grid.Column="0"
                Padding="9"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}"
                Text="HeaderText..."
                TextTrimming="CharacterEllipsis" />
        </Border>

        <WebBrowser
            x:Name="HelpFrame"
            Grid.Row="1"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            OverridesDefaultStyle="False"
            ScrollViewer.CanContentScroll="False"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto" />

        <Border
            Grid.Row="3"
            Grid.Column="0"
            Background="#FFECECEC"
            BorderBrush="#FFC9C9C9"
            BorderThickness="0,1,0,1">

            <DockPanel VerticalAlignment="Center">
                <Button
                    x:Name="BtnOkButton"
                    Width="70"
                    Height="30"
                    Margin="0,0,8,0"
                    Padding="6"
                    HorizontalAlignment="Right"
                    Command="{Binding Path=CancelButtonCommand}"
                    DockPanel.Dock="Right"
                    FontSize="18"
                    FontWeight="ExtraBold"
                    IsDefault="True"
                    IsEnabled="True"
                    KeyboardNavigation.IsTabStop="False"
                    Visibility="Visible">
                    <Button.Content>
                        <Path
                            Width="17"
                            Height="17"
                            Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                            Fill="Red"
                            Stretch="Fill" />
                    </Button.Content>
                </Button>
            </DockPanel>
        </Border>
    </Grid>

</Window>

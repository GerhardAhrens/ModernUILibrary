    <Border BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <DockPanel
                Grid.Row="0"
                Background="LightBlue"
                LastChildFill="True">

                <Image
                    Margin="4"
                    HorizontalAlignment="Left"
                    DockPanel.Dock="Left">
                    <Image.Source>
                        <DrawingImage>
                            <DrawingImage.Drawing>
                                <GeometryDrawing Brush="#3E79B4" Geometry="{StaticResource ResourceKey=IconAccount}" />
                            </DrawingImage.Drawing>
                        </DrawingImage>
                    </Image.Source>
                </Image>

                <TextBlock
                    x:Name="TbHeader"
                    Width="Auto"
                    Margin="10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left"
                    FontSize="14"
                    FontWeight="Medium" />
            </DockPanel>

            <StackPanel Grid.Row="1">

                <StackPanel Height="35" Orientation="Horizontal">
                    <TextBlock
                        Margin="10,0,20,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="Benutzer" />

                    <TextBox
                        x:Name="TxtUser"
                        Width="400"
                        Height="25"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Height="35" Orientation="Horizontal">
                    <TextBlock
                        Margin="10,0,20,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="Passwort" />

                    <TextBox
                        x:Name="TxtPassword"
                        Width="400"
                        Height="25"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>

            <Border
                Grid.Row="2"
                Background="LightGray"
                BorderBrush="Black"
                BorderThickness="0,1,0,0">
                <DockPanel Margin="5,0,5,0" LastChildFill="True">

                    <Button
                        x:Name="BtnNo"
                        Width="100"
                        Height="30"
                        Click="BtnNo_Click"
                        Content="Nein"
                        DockPanel.Dock="Right" />

                    <Button
                        x:Name="BtnYes"
                        Width="100"
                        Height="30"
                        Margin="20,0"
                        HorizontalAlignment="Right"
                        Click="BtnYes_Click"
                        Content="Ja"
                        DockPanel.Dock="Right" />

                </DockPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>

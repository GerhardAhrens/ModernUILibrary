<base:UserControlBase
    x:Class="ModernTemplate.Views.ContentControls.TabAboutLicensePackage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:ModernUIWPF="clr-namespace:ModernIU.WPF.Base;assembly=ModernUILibrary"
    xmlns:base="clr-namespace:ModernUI.MVVM.Base;assembly=ModernUILibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:localStatic="clr-namespace:ModernTemplate.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ModernUI:SimpleGrid
        Margin="5"
        Columns="*"
        Rows="35,*">
        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="6"
            Height="Auto"
            HorizontalAlignment="Stretch"
            Background="LightBlue"
            Orientation="Horizontal">

            <TextBlock
                x:Name="TbTitelUC"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Text="Lizenzen / NuGet Pakete" />
        </StackPanel>

        <ScrollViewer
            Grid.Row="1"
            HorizontalScrollBarVisibility="Hidden"
            VerticalScrollBarVisibility="Visible">
            <ItemsControl
                Name="icLicensePackage"
                Margin="5,10,0,0"
                ItemsSource="{Binding Path=LicensePackageSource}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Blue" BorderThickness="0,0,0,1">
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="300" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{Binding Path=Name}" />
                                <TextBlock Grid.Column="1" Text="{Binding Path=Version}" />
                                
                                <TextBlock
                                    Grid.Column="2"
                                    Text="{Binding Path=Description}"
                                    TextWrapping="Wrap" />

                                <ModernUI:LinkLabel
                                    Grid.Column="3"
                                    HorizontalAlignment="Left"
                                    Content="{Binding Path=Link}"
                                    IsExtern="False"
                                    Url="{Binding Path=Link}">
                                    <Label.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                        </Style>
                                    </Label.Resources>
                                </ModernUI:LinkLabel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </ModernUI:SimpleGrid>
</base:UserControlBase>

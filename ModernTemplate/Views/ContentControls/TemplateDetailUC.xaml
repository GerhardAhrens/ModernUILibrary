<base:UserControlBase
    x:Class="ModernTemplate.Views.ContentControls.TemplateDetailUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModernConverter="clr-namespace:ModernIU.Converters;assembly=ModernUILibrary"
    xmlns:ModernUI="clr-namespace:ModernIU.Controls;assembly=ModernUILibrary"
    xmlns:ModernWPF="clr-namespace:ModernIU.WPF.Base;assembly=ModernUILibrary"
    xmlns:base="clr-namespace:ModernUI.MVVM.Base;assembly=ModernUILibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ModernTemplate.Views.ContentControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    x:Name="nameCustomUC"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  Allgemeine UserControl Resources  -->
        <ModernConverter:BooleanToVisibleConverter x:Key="BooleanToVisibleConverter" />
        <ModernConverter:IntToVisibilityConverter x:Key="intToVisibilityConverter" />

        <ModernWPF:CommandKeyReference x:Key="BackCmdKey" Command="{Binding Path=CmdAgg[DialogBackCommand]}" />
        <ModernWPF:CommandKeyReference x:Key="SaveCmdKey" Command="{Binding Path=CmdAgg[RecordSaveCommand]}" />
        <ModernWPF:CommandKeyReference x:Key="CancelCmdKey" Command="{Binding Path=CmdAgg[DialogCancelCommand]}" />

        <sys:Double x:Key="IconSize">16.0</sys:Double>
    </UserControl.Resources>

    <UserControl.InputBindings>
        <KeyBinding Key="Esc" Command="{StaticResource ResourceKey=BackCmdKey}" />

        <KeyBinding
            Key="F4"
            Command="{StaticResource ResourceKey=BackCmdKey}"
            Modifiers="Ctrl" />

        <KeyBinding
            Key="X"
            Command="{StaticResource ResourceKey=CancelCmdKey}"
            Modifiers="Ctrl" />

        <KeyBinding
            Key="S"
            Command="{StaticResource ResourceKey=SaveCmdKey}"
            Modifiers="Ctrl" />
    </UserControl.InputBindings>

    <ModernUI:SimpleGrid
        x:Name="rootGrid"
        Columns="*"
        Rows="20,Auto,35,*">
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontWeight="Medium"
            Text="Erweiterte Dialogbeschreibung" />

        <Border
            Grid.Row="2"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            BorderBrush="Black"
            BorderThickness="0,1,0,1">
            <DockPanel>
                <ModernUI:PathButton
                    Width="100"
                    Height="30"
                    Command="{Binding Path=CmdAgg[DialogBackCommand]}"
                    IsDefault="True"
                    PathData="{StaticResource ResourceKey=IconDialogBack}"
                    PathWidth="14">
                    <ModernUI:PathButton.ToolTip>
                        <ModernUI:MToolTip Content="Zurück zum vorherigen Dialog [ESC]" PlacementEx="TopLeft" />
                    </ModernUI:PathButton.ToolTip>
                    <ModernUI:PathButton.Content>
                        <TextBlock>
                            <Run Text="Zurück" />
                        </TextBlock>
                    </ModernUI:PathButton.Content>
                </ModernUI:PathButton>

                <ModernUI:PathButton
                    Width="100"
                    Height="30"
                    Margin="5,0,0,0"
                    Command="{Binding Path=CmdAgg[RecordSaveCommand]}"
                    PathData="{StaticResource ResourceKey=IconRecordSave}"
                    PathWidth="{StaticResource ResourceKey=IconSize}">
                    <ModernUI:PathButton.ToolTip>
                        <ModernUI:MToolTip Content="Aktuelle Änderung speichern" PlacementEx="TopLeft" />
                    </ModernUI:PathButton.ToolTip>
                    <ModernUI:PathButton.Content>
                        <TextBlock>
                            <Run Text="Speichern" />
                        </TextBlock>
                    </ModernUI:PathButton.Content>
                </ModernUI:PathButton>

                <ModernUI:PathButton
                    Width="100"
                    Height="30"
                    Margin="5,0,0,0"
                    Command="{Binding Path=CmdAgg[DialogCancelCommand]}"
                    PathData="{StaticResource ResourceKey=IconDialogCancel}"
                    PathWidth="{StaticResource ResourceKey=IconSize}">
                    <ModernUI:PathButton.ToolTip>
                        <ModernUI:MToolTip Content="Aktuelle Bearbeitung abbrechen" PlacementEx="TopLeft" />
                    </ModernUI:PathButton.ToolTip>
                    <ModernUI:PathButton.Content>
                        <TextBlock>
                            <Run Text="Abbruch" />
                        </TextBlock>
                    </ModernUI:PathButton.Content>
                </ModernUI:PathButton>

                <Button
                    x:Name="BtnShowErrors"
                    Width="50"
                    Height="40"
                    HorizontalAlignment="Right"
                    DockPanel.Dock="Right"
                    ToolTip="Eingabefehler im Detail anzeigen"
                    Visibility="{Binding Path=ValidationErrors.Count, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ResourceKey=intToVisibilityConverter}}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{StaticResource ResourceKey=IconValidationError}" Stretch="None" />
                            <TextBlock
                                FontSize="14"
                                FontWeight="Medium"
                                Text="{Binding Path=ValidationErrors.Count, UpdateSourceTrigger=PropertyChanged, FallbackValue=00}" />
                        </StackPanel>
                    </Button.Content>
                </Button>            
            </DockPanel>
        </Border>

        <StackPanel Grid.Row="3" Grid.Column="0">
            <ScrollViewer
                Width="Auto"
                MaxHeight="400"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Auto">
                <TextBlock
                    Margin="0,10,0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="18"
                    ScrollViewer.CanContentScroll="True"
                    Text="{Binding Path=DemoText, UpdateSourceTrigger=PropertyChanged, FallbackValue=~DemoText}"
                    TextWrapping="NoWrap" />
            </ScrollViewer>
        </StackPanel>

    </ModernUI:SimpleGrid>
</base:UserControlBase>
